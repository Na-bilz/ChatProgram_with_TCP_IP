<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Panel koneksi -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
            <TextBox x:Name="TxtIp" Text="127.0.0.1" Margin="0,5"/>
            <TextBox x:Name="TxtPort" Text="9000" Margin="0,5"/>
            <TextBox x:Name="TxtUsername" Text="User1" Margin="0,5"/>
            <Button x:Name="BtnConnect" Content="Connect" Margin="0,5" Click="BtnConnect_Click"/>
            <Button x:Name="BtnDisconnect" Content="Disconnect" Margin="0,5" Click="BtnDisconnect_Click"/>
        </StackPanel>

        <!-- Pesan -->
        <ListBox x:Name="ListMessages" Grid.Column="1" Grid.Row="1" Margin="5"/>

        <!-- User aktif -->
        <ListBox x:Name="ListUsers" Grid.Column="0" Grid.Row="1" Margin="5"/>

        <!-- Input pesan -->
        <TextBox x:Name="TxtMessage" Grid.Column="1" Grid.Row="2" Margin="5,0,80,5" VerticalAlignment="Center" KeyDown="TxtMessage_KeyDown"/>
        <Button x:Name="BtnSend" Content="Send" Grid.Column="1" Grid.Row="2"
                Width="60" HorizontalAlignment="Right" Margin="0,0,5,5" Click="BtnSend_Click"/>
    </Grid>
</Window>
